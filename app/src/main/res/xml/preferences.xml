    <SeekBarPreference
        android:key="gravity"
        android:title="@string/gravity"
        android:summary="@string/gravity_help"
        android:max="20"
        android:defaultValue="10"
        android:icon="@drawable/ic_gravity"/>

    <SeekBarPreference
        app:key="slab_restitution"
        app:title="@string/slab_restitution"
        app:summary="@string/restitution_help"
        android:max="1"
        android:defaultValue="0.5"
        android:icon="@drawable/ic_box_glove"/>

    <SeekBarPreference
        app:key="slab_friction"
        app:title="@string/slab_friction"
        app:summary="@string/friction_help"
        android:max="1"
        android:defaultValue="0.5"
        android:icon="@drawable/ic_friction"/>

    <SeekBarPreference
        app:key="slab_density"
        app:title="@string/slab_density"
        app:summary="@string/slab_density_help"
        android:max="1"
        android:defaultValue="0.5"
        android:icon="@drawable/ic_weight"/>

    <SeekBarPreference
        app:key="ball_restitution"
        app:title="@string/ball_restitution"
        app:summary="@string/restitution_help"
        android:max="1"
        android:defaultValue="0.95"
        android:icon="@drawable/ic_box_glove"/>

    <SeekBarPreference
        app:key="ball_friction"
        app:title="@string/ball_friction"
        app:summary="@string/friction_help"
        android:max="1"
        android:defaultValue="0.1"
        android:icon="@drawable/ic_friction"/>

    <SeekBarPreference
        app:key="ball_density"
        app:title="@string/ball_density"
        app:summary="@string/ball_density_help"
        android:max="22"
        android:defaultValue="7.9"
        android:icon="@drawable/ic_weight"/>

</PreferenceScreen>
